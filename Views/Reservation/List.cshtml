@model List<ReservationModel>
@using ReservationProject.Controllers

@{
    ViewData["Title"] = "Rezervasyonlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />
<script src="~/js/site.js"></script>

@if (TempData["SuccessMessage"] != null)
{
<div class="alert alert-success">
    <strong>Kayıt Başarılı!</strong> @TempData["SuccessMessage"]
    </div>
}
else if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Hata!</strong> @TempData["ErrorMessage"]
    </div>
}

<div class="col-12">
    <div class="row" style="margin-bottom: 10px">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-10">
        <table class="table table-bordered" style="margin-top: 15px">
            <thead>
                <tr>
                    <th>İşletme</th>
                    <th>Müşteri</th>
                    <th>Tarih</th>
                    <th>Kişi Sayısı</th>
                    <th>Masa Numarası</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.CompanyName</td>
                            <td>@x.CustomerName</td>
                            <td>@x.Date.ToString("dd/MM/yyyy")</td>
                            <td>@x.CustomerCount</td>
                            <td>@x.TableNo</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>   
</div>







